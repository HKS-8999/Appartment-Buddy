<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/advertisement_nav_graph"
    app:startDestination="@id/apartmentFragment">

    <fragment
        android:id="@+id/apartmentFragment"
        android:name="com.example.apartmentbuddy.fragments.AdvertisementHomeFragment"
        android:label="fragment_apartment"
        tools:layout="@layout/fragment_advertisement_home" >
        <action
            android:id="@+id/action_apartmentFragment_to_itemsFragment"
            app:destination="@id/itemsFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemsFragment"
        android:name="com.example.apartmentbuddy.fragments.ItemsFragment"
        android:label="fragment_items"
        tools:layout="@layout/fragment_items" >
        <action
            android:id="@+id/action_itemsFragment_to_apartmentFragment"
            app:destination="@id/apartmentFragment" />
    </fragment>
</navigation>